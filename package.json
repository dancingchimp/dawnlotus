// src/package.json

{
  "name": "harmony-gate",
  "version": "1.0.0",
  "private": true,
  "description": "A Daoist yoga and spiritual practice platform",
  "homepage": "https://dancingchimp.github.io/harmonygate",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.263.1",
    "papaparse": "^5.4.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.12",
    "react-intersection-observer": "^9.5.3",
    "react-router-dom": "^6.15.0",
    "recharts": "^2.10.3",
    "tailwind-merge": "^2.2.0",
    "web-vitals": "^3.4.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.26.9",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "autoprefixer": "^10.4.17",
    "babel-plugin-transform-imports": "^2.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "customize-cra": "^1.0.0",
    "eslint": "^8.47.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.35",
    "prettier": "^3.0.2",
    "react-app-rewired": "^2.2.1",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "^3.4.1"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build && cp build/index.html build/404.html",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\"",
    "clean": "rm -rf build node_modules/.cache"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "react/prop-types": "warn",
      "no-unused-vars": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}